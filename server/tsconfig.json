{
  "compilerOptions": {
    "target": "ES2020", // Target JavaScript version
    "module": "commonjs", // Module system (CommonJS for Node.js)
    "outDir": "./dist", // Output directory for compiled JS files
    "rootDir": "./src", // Source directory for TypeScript files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable ES module interoperability
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent casing in file names
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules"] // Exclude node_modules
}